<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:ignore="MissingDefaultResource">

   <TextView
       android:id="@+id/destinationText"
       android:layout_width="0dp"
       android:layout_height="wrap_content"
       android:text="TextView"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintHorizontal_bias="0.5"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent" />

   <TextView
       android:id="@+id/terminalText"
       android:layout_width="100dp"
       android:layout_height="wrap_content"
       android:text="TextView"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/destinationText" />

   <TextView
       android:id="@+id/gateText"
       android:layout_width="100dp"
       android:layout_height="wrap_content"
       android:text="TextView"
       app:layout_constraintEnd_toStartOf="@+id/delayText"
       app:layout_constraintStart_toEndOf="@+id/terminalText"
       app:layout_constraintTop_toBottomOf="@+id/destinationText" />

   <TextView
       android:id="@+id/delayText"
       android:layout_width="100dp"
       android:layout_height="wrap_content"
       android:text="TextView"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/destinationText" />


</androidx.constraintlayout.widget.ConstraintLayout>