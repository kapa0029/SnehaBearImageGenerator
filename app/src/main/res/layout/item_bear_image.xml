<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/savedBearImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

    <TextView
        android:id="@+id/savedWidth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/savedBearImage"
        android:textColor="@color/black"
        android:textSize="20sp"
        tools:text="@string/width_header_text" />

    <TextView
        android:id="@+id/savedHeight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/savedWidth"
        android:layout_toEndOf="@+id/savedBearImage"
        android:textColor="@color/black"
        android:textSize="20sp"
        tools:text="@string/height_header_text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/savedBearImage"
        android:layout_marginTop="10dp"
        android:background="#34DC06" />

</RelativeLayout>